%h2= t("forem.admin.category.index")
= link_to t("forem.admin.category.new_link"), new_admin_category_path
%table#forums.forums.subdued{:cellspacing => "0"}
  %thead
    %tr
      %th= t('edit', :scope => 'forem.admin.categories')
      %th= t('delete', :scope => 'forem.admin.categories')
      %th= t('category', :scope => 'forem.admin.categories')
  %tbody
    - @category.each do |category|
      %tr{:class => "forum #{cycle("odd", "even")}"}
        %td= link_to t('edit', :scope => 'forem.admin.categories'), edit_admin_category_path(category)
        %td= link_to t('delete', :scope => 'forem.admin.categories'), admin_category_path(category), :method => :delete, :confirm => t("delete_confirm", :scope => "forem.admin.categories")
        %td
          = category.name
= link_to t('forem.admin.forum.index'), admin_forums_path
