= render :partial => 'forem/forums/head', :locals => { :forum => @forum }
- if @topics.num_pages > 1
  .pages
    = t('forem.common.pages')
    \: #{forem_paginate @topics}
%table.topics.subdued{:cellspacing => "0"}
  %thead
    %tr
      %th.icon
      %th.byline= t('forem.topic.headings.topic')
      %th.latest-post= t('forem.topic.headings.latest')
      %th.posts-count= t('forem.topic.headings.posts')
      %th.views-count= t('forem.topic.headings.views')
  %tbody
    - if @topics.empty?
      %tr
        %td{:align => "center", :colspan => "5"}= t('forem.topic.none')
    = render @topics
