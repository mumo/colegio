%section#binformativo1
  #slider{style: 'width: 950px; height:300px; overflow: hidden; '}
    - unless @informativo.nil?
      - @informativo.each do |image|
        - if image.image_link.empty?
          = image_tag banner('950x300',image)
        - else
          = link_to image.image_link do
            = image_tag banner('950x300', image)
:javascript
  $(window).load(function(){
    $('#slider').nivoSlider();
  });
