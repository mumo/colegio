%section#binformativo.slider-wrapper.theme-default
  #slider.nivoSlider{style: 'width: 960px; height:300px;'}
    - unless @informativo.nil?
      - @informativo.each do |image|
        - if image.image_link.empty?
          = image_tag banner('960x300',image)
        - else
          = link_to image.image_link do
            = image_tag banner('960x300', image)
:javascript
  $(window).load(function(){
    $('#slider').nivoSlider({
      effect: 'fade',
      animSpeed: 500, 
      pauseTime: 5000, 
      directionNav: true, 
      directionNavHide: false, 
      controlNav: false 
    });
  }); 
