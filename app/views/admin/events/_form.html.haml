= simple_form_for [:admin, @event] do |f|
  = f.input :title
  = f.input :coordinator
  = f.input :description
  = f.input :event_type, collection: Event.main_types, prompt: 'Select Event Type'
  = f.input :sub_type, collection: Event.sub_types, label:false
  = f.input :place 
  = f.input :schedule
  = f.input :google_map
  = f.input :event_date
  = f.input :program
  = f.submit

:javascript
  $(document).ready(function(){
    $('#event_event_type').change(function(){
    var value = $('#event_event_type :selected').val();
    switch(value){
      case 'filiales':
        var select = "<option value='glaucoma'> Asociación de Glaucoma de Occidente 2012 </option>" +
          "<option value='pediatrica'>  Sociedad de Oftalmología Pediátrica y Estrabismo de Occidente 2012 </option>" +
          "<option value='oftalmologico'> Grupo Oftalmológico </option>" +
          "<option value='oculoplastica'>  Sociedad Cirugia Oculoplástica Orbitaria </option>" +
          "<option value='retina'>  Programa Académico de la Asociacion de Retina de Occidente 2012 </option>"
        $('#event_sub_type').show();
        $('#event_sub_type').html(select);
        break;
      case 'educacion-continua':
        var select = "<option value='glaucoma'> Módulo: Glaucoma </option>" +
          "<option value='retina'> Módulo: Retina</option>" +
          "<option value='oftalmologia'> Módulo: Oftalmología Pediátrica y Estrabismo </option>" +
          "<option value='refraccion'> Módulo: Refracción </option>" +
          "<option value='neuro'> Módulo: Neuro Oftalmología </option>" +
          "<option value='cornea'> Módulo: Córnea y Catarata </option>" +
          "<option value='tecnologia'> Módulo: Tecnología de Punta </option>" 
        $('#event_sub_type').show();
        $('#event_sub_type').html(select);
        break;
      default:
        $('#event_sub_type').html("none");
        $('#event_sub_type').hide();
    }
    });
  });
