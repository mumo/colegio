#detalle
  %h1 Directorio
  .detalle-miembros
    #nombre-m
      = @member.full_name
    #correo-m
      = link_to @member.email, "mailto:#{@member.email}"
    #addresses
      - @member.addresses.each do |address|
        .direccion-m
          %strong Direcci√≥n
          %br
          = address.street
          %br
          = address.full_address
          %br
          = "Tel: #{number_to_phone(address.local_phone, area_code: true)}"
          %br
          = "Cel: #{number_to_phone(address.cel_phone, area_code: true)}"

.mapa-miembro
  = gmaps(map_options: {auto_adjust: true, auto_zoom: true }, markers: { data: @json } )
  
= link_to 'Directorio', members_path, id: 'regresar-lista'
